{
  "name": "laratools",
  "displayName": "Laravel Tools",
  "author": "Martin Lechêne (DOG&DEV)",
  "description": "Outils pratiques pour le développement Laravel dans VSCode",
  "version": "0.1.0",
  "publisher": "laratools-team",
  "engines": {
    "vscode": "^1.60.0"
  },
  "icon": "icon.svg",
  "galleryBanner": {
    "color": "#FF2D20",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "laravel",
    "php",
    "artisan",
    "blade",
    "web development"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/laratools-team/laratools-extension-vscode"
  },
  "homepage": "https://github.com/laratools-team/laratools-extension-vscode/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/laratools-team/laratools-extension-vscode/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "workspaceContains:artisan"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravelTools.detect",
        "title": "Laravel Tools: Détecter le projet"
      },
      {
        "command": "laravelTools.generateArtisan",
        "title": "Laravel Tools: Générer avec Artisan"
      },
      {
        "command": "laravelTools.runArtisan",
        "title": "Laravel Tools: Exécuter une commande Artisan"
      },
      {
        "command": "laravelTools.searchComponents",
        "title": "Laravel Tools: Rechercher des composants Blade"
      },
      {
        "command": "laravelTools.runTests",
        "title": "Laravel Tools: Exécuter les tests"
      },
      {
        "command": "laravelTools.config",
        "title": "Laravel Tools: Configuration"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "ts-loader": "^9.2.5",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
